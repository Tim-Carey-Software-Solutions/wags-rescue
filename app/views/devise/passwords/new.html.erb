<div class="flex justify-center items-center h-screen">
  <%= render CardComponent.new(title: "Forgot your password?", extra_title_classes: "text-primary") do %>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-control">
          <%= f.label :email, class: "label label-text" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-primary input-bordered w-full max-w-xs" %>
        </div>
        <div class="card-actions mt-4 mb-4 items-center justify-center">
          <%= f.submit "Send Email", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="flex-col card-actions items-center justify-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
