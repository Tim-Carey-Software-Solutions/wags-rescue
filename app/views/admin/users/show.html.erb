<%= render AdminCardComponent.new(title: @user.email, link_text: "Edit #{@user.email}", link_path: edit_admin_user_path(@user), btn_path: admin_user_path(@user)) do %>
  <hr>

  <div class="container mx-auto mt-10 px-12">
    <div class="grid grid-cols-4">
      <div class="mb-2">ID</div>
      <div><%= @user.id %></div>
    </div>

    <div class="grid grid-cols-4">
      <div class="mb-2">EMAIL</div>
      <div><%= @user.email %></div>
    </div>

    <div class="grid grid-cols-4">
      <div class="mb-2">CREATED AT</div>
      <div><%= format_date_time(@user.created_at) %></div>
    </div>

    <div class="grid grid-cols-4">
      <div class="mb-2">UPDATED AT</div>
      <div><%= format_date_time(@user.updated_at) %></div>
    </div>

    <div class="grid grid-cols-4">
      <div>ADMIN</div>
      <% if @user.admin? %>
        <div>Yes</div>
      <% else %>
        <div>No</div>
      <% end %>
    </div>
  </div>
<% end %>