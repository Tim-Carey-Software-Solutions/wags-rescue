<div class="drawer drawer-mobile">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle"/>
  <div class="drawer-content relative">
    <label for="my-drawer-2" tabindex="0" class="btn btn-ghost lg:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"/>
      </svg>
    </label>
    <% if @home %>
      <%= render "layouts/hero" %>
    <% end %>
    <main class="container mx-auto mt-10 px-12">
      <%= @my_yield %>
    </main>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-2" class="drawer-overlay"></label>

    <ul class="menu p-4 w-72 bg-base-100 text-base-content">
      <%= link_to root_path, class: "btn flex justify-start mb-2 btn-ghost normal-case text-xl" do %>
        <%= image_tag "wags_logo.png", class: "w-10 h-10 mr-2" %>
        Wags Rescue
      <% end %>
      <li><%= link_to "Home", root_path %></li>
      <div class="dropdown">
        <ul onclick="this.parentElement.classList.toggle('dropdown-open');document.activeElement.blur()">
          <li>
            <label tabindex="0">
              Adopt
              <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
              </svg>
            </label>
          </li>
        </ul>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li><%= link_to "Adopt", adopting_path %></li>
          <li><%= link_to "Our Dogs", our_dogs_path %></li>
          <li><%= link_to "Our Cats", our_cats_path %></li>
          <li><%= link_to "Adoption Application", new_adoption_application_path %></li>
        </ul>
      </div>
      <div class="dropdown">
        <ul onclick="this.parentElement.classList.toggle('dropdown-open');document.activeElement.blur()">
          <li>
            <div tabindex="0">
              Foster
              <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>
              </svg>
            </div>
          </li>
        </ul>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li><%= link_to "Foster", foster_path %></li>
          <li><%= link_to "Foster Application", "#" %></li>
        </ul>
      </div>
      <li><%= link_to "Volunteer", volunteer_path %></li>
      <li><%= link_to "Fundraising", fundraising_path %></li>
      <li><%= link_to "Events", events_path %></li>
      <li><%= link_to "Donate", donate_path %></li>
      <li><%= link_to "Wish List", wishlist_path %></li>
      <li><%= link_to "AmazonSmile", amazon_smile_path %></li>
      <li><%= link_to "Contact Us", contact_us_path %></li>
      <li><%= link_to "About Us", about_us_path %></li>
      <li><%= link_to "FAQ", faq_path %></li>
      <li><%= link_to "Wags Wiki", wags_wiki_path, class: "mb-2" %></li>
      <% if @user_signed_in && @current_user.admin? %>
        <li><%= link_to "Admin", admin_root_path %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "mb-4" %></li>
      <% else %>
        <li><%= link_to "Sign In", new_user_session_path, class: "mb-4" %></li>
      <% end %>
      <div class="mt-auto flex justify-center gap-4">
        <div class="inline fb-share-button" data-href="https://bold-star-9293.fly.dev/" data-layout="" data-size="">
          <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fbold-star-9293.fly.dev%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">
            <i class="fa-brands text-[#1877f2] text-3xl mb-2 fa-square-facebook"></i>
          </a>
        </div>
        <a class="twitter-share-button" href="https://twitter.com/intent/tweet?text=Check out Wags Rescue <%= website_link %>">
          <i class="fa-brands text-primary text-3xl fa-square-twitter"></i>
        </a>
        <i class="fa-brands text-[#ff4500] text-3xl fa-square-reddit cursor-pointer" onclick="window.open('https://reddit.com/submit?url=http%3A%2F%2Fwagsrescue.com%2F')"></i>
        <%= mail_to "", body: "Check out this link: #{website_link}", subject: "Wags Rescue" do %>
          <i class="fa-solid text-red-500 text-3xl fa-square-envelope"></i>
        <% end %>
        <i class="fa-solid text-primary text-3xl fa-print cursor-pointer" onclick="window.print()"></i>
      </div>
    </ul>
  </div>
</div>